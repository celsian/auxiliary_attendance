<div class="container-fluid">
  <div class="row">
    <div class="col-md-9" style="font-size:xx-large;">
      <P>
        <B>Your Sessions:</B>
      </P>
    </div>
    <div class="col-md-3" style="text-align:right;font-size:xx-large;">
      <%= link_to "New Session", new_class_session_path(), class: "btn btn-primary" %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <table class="table table-striped">
        <tr class="success">
          <th style="width: 50%;">Open Sessions:</th><th>Start Time:</th><th>End Time:</th>
        </tr>
        <% @class_sessions_open.each do |session| %>
        <tr>
          <td><%= link_to "#{session.name}", class_session_path(session) %></td><td><%= session.created_at.strftime("%l:%M:%S %p - %a %m-%d-%Y") %></td><td><%= session.end_time ? session.end_time.strftime("%l:%M:%S %p - %a %m-%d-%Y") : "Note Yet Closed" %></td>
        </tr>
        <% end %>
      </table>
    </div>
    <div class="col-md-12">
      <table class="table table-striped">
        <tr>
          <th style="width: 50%;">Closed Sessions:</th><th>Start Time:</th><th>End Time:</th>
        </tr>
        <tr>
          <td>A Closed Session</td><td>Then</td><td>Now</td>
        </tr>
      </table>
    </div>
  </div>
</div>

