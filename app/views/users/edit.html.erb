<div class="row">
  <div class="col-md-6">
    <h3><B>Edit User:</B> <%= @user.email %></h3>
  </div>
  <div class="col-md-6" align="right">
    <h2><B>User Editor</B></h2>
  </div>
</div>
<br>
<div class="row">
  <div class="col-md-6">
    <%= form_for @user do |f| %>

      <div>
        <%= f.label :email %><br />
        <%= f.text_field :email, class: "form-control", placeholder: "First Name", autocomplete: "off" %>
      </div>
      <br>
      <div>
        <%= f.label :password %> <small><i>(Leave this blank if you don't want to change it.)</i></small><br />
        <%= f.password_field :password, class: "form-control", placeholder: "New Password", autocomplete: "off" %>
      </div>
      <br>
      <div>
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Repeat Password", autocomplete: "off" %>
      </div>
      <br>
      <div class="col-md-2"><%= f.submit "Submit", class: "btn btn-primary" %></div>
    <% end %>
  </div>
</div>