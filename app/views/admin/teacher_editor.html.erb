<div class="row">
  <div class="col-md-6">
    <h3><B>Search for Users by E-Mail:</B></h3>
    <%= form_tag teacher_editor_path, :method => :get, :class => "form-search" do %>
      <%= text_field_tag :q, '',size: 30, autofocus: true %>
      <%= submit_tag "Search", class: 'btn btn-sm btn-primary' %>
    <% end %>
  </div>
  <div class="col-md-6" align="right">
    <br>
    <h2><B>Teacher Editor</B></h2>
  </div>
</div>
<br>
<div class="row">
  <div class="col-md-6">
    <div class="panel panel-default">
      <!-- Default panel contents -->
      <div class="panel-heading"><h3 class="panel-title"><B><CENTER>Add Rights</CENTER></B></h3></div>

      <!-- Table -->
      <table class="table table-striped">
        <thead>
          <tr>
            <th width=70%>E-Mail</th><th>Teacher</th>
          </tr>
        </thead>
    <% if @users.length > 0 %>
      <% @users.each do |user| %>
        <tr>
          <td>
            <%= user.formatted_email %>
          </td>
          <td class="c">
            <% if user.teacher %>
              <%= link_to "Remove Teacher", remove_teacher_path(user.id, params[:q]), data: { confirm: "Are you sure you want to remove #{user.email} as a Teacher?" }, class: "btn btn-sm btn-danger" %>
            <% else %>
              <%= link_to "Add Teacher", add_teacher_path(user.id, params[:q]), data: { confirm: "Are you sure you want to add #{user.email} as a Teacher?" }, class: "btn btn-sm btn-success" %>
            <% end %>
          </td>
        </tr>
      <% end %>
    <% else %>
      <tr>
        <td>
        Sorry, no records match your query.
        </td>
        <td>
        </td>
      </tr>
    <% end %>
      </table>
    </div>
<!-- PAGINATION STARTS HERE -->
    <nav>
      <ul class="pagination">    
          <% if params[:s].to_i == 0 %>
            <li class="disabled"><a href="">«</a></li>
          <% else %>
            <li><%= link_to "«", teacher_editor_path(params.merge(s: params[:s].to_i-1)) %></li>
          <% end %>
        <% if @user_pages %>
          <% 1.upto(@user_pages) do |i| %>
            <% if params[:s].to_i == i-1 %>
              <li class="active">
            <% else %>
              <li>
            <% end %>
              <%= link_to i, teacher_editor_path(params.merge(s: i-1)) %>
          <% end %>
              </li>
        <% end %>
        <li>
            <% if params[:s].to_i == @user_pages-1 || @user_pages == 0 %>
              <li class="disabled"><a href="">»</a></li>
            <% else %>
              <%= link_to "»", teacher_editor_path(params.merge(s: params[:s].to_i+1)) %>
            <% end %>
        </li>
      </ul>
    </nav>
<!-- PAGINATION ENDs HERE -->
  </div>

  <div class="col-md-6">
    <% if @teachers %>
      <div class="panel panel-default">
        <!-- Default panel contents -->
        <div class="panel-heading"><h3 class="panel-title"><B><Center>Remove Rights</Center>  </B></h3></div>

        <!-- Table -->
        <table class="table table-striped">
          <thead>
            <tr>
              <th width=70%>E-Mail</th><th>Teacher</th>
            </tr>
          </thead>

          <% @teachers.each do |user| %>
            <tr>
            <td>
              <%= user.formatted_email %>
            </td>
            <td class="c">
              <% if user.teacher %>
                <%= link_to "Remove Teacher", remove_teacher_path(user.id, params[:q] = "@"), data: { confirm: "Are you sure you want to remove #{user.email} as a Teacher?" }, class: "btn btn-sm btn-danger" %>
              <% else %>
              
              <% end %>
            </td>
          </tr>
          <% end %>
        </table>
      </div>
<!-- PAGINATION STARTS HERE -->
      <nav align="right">
        <ul class="pagination">    
            <% if params[:t].to_i == 0 %>
              <li class="disabled"><a href="">«</a></li>
            <% else %>
              <li><%= link_to "«", teacher_editor_path(params.merge(t: params[:t].to_i-1)) %></li>
            <% end %>
          <% if @teacher_pages %>
            <% 1.upto(@teacher_pages) do |i| %>
              <% if params[:t].to_i == i-1 %>
                <li class="active">
              <% else %>
                <li>
              <% end %>
                <%= link_to i, teacher_editor_path(params.merge(t: i-1)) %>
            <% end %>
                </li>
          <% end %>
          <li>
              <% if params[:t].to_i == @teacher_pages-1 || @teacher_pages == 0 %>
                <li class="disabled"><a href="">»</a></li>
              <% else %>
                <%= link_to "»", teacher_editor_path(params.merge(t: params[:t].to_i+1)) %>
              <% end %>
          </li>
        </ul>
      </nav>
<!-- PAGINATION ENDs HERE -->
    <% end %>
  </div>
</div>