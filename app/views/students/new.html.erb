<div class="row">
  <div class="col-md-6">
    <h3><B>New Student</B></h3>
  </div>
</div>
<br>
<div class="row">
  <div class="col-md-6">
    <%= form_for @student do |f| %>

      <div>
        <%= f.label :first_name %><br />
        <%= f.text_field :first_name, class: "form-control", placeholder: "First Name", autocomplete: "off" %>
      </div>
      <br>
      <div>
        <%= f.label :last_name %><br />
        <%= f.text_field :last_name, class: "form-control", placeholder: "Last Name", autocomplete: "off" %>
      </div>
      <br>
      <div>
        <%= f.label :id_number %><br />
        <%= f.text_field :id_number, class: "form-control", placeholder: "ID Number", autocomplete: "off" %>
      </div>
      <br>
      <div><%= f.submit "Submit", class: "btn btn-primary" %></div>
    <% end %>
  </div>
</div>