<div class="row">
  <div class="col-md-6">
    <h2><%= "#{@student.first_name} #{ @student.last_name }" %>
    <small><%= "#{@student.id_number}" %></small></h2>
  </div>
  <div class="col-md-6" align="right">
    
  </div>
</div>
<br>
<% if @months %>
  <div class="row">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title" align="center">

            <div class="dropdown">
              <%= link_to "Â«", student_stats_path(m: @current_month-1.month), class: "btn btn-default" %>
              <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <B><%= @current_month.strftime("%B %Y") %></B>
                <span class="caret"></span>
              </button>
              <%= link_to "Â»", student_stats_path(m: @current_month+1.month), class: "btn btn-default" %>
              <ul class="dropdown-menu centerDropdown" aria-labelledby="dropdownMenu2">
                <% @months.each do |m| %>
                  <li><%= link_to m.strftime("%B %Y"), student_stats_path(m: m) %></li>
                <% end %>
              </ul>
            </div>
        </h3>
      </div>
      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th width="13%">Sunday</th>
            <th width="13%">Monday</th>
            <th width="13%">Tuesday</th>
            <th width="13%">Wednesday</th>
            <th width="13%">Thursday</th>
            <th width="13%">Friday</th>
            <th width="13%">Saturday</th>
            <th width="9%"></th>
          </tr>
        </thead>
        <% 0.upto(@weeks_start.length-1) do |i| %>
        <tr>
          <% 0.upto(6) do |j| %>
          <th width="13%"><%= "#{(@weeks_start[i]+j.days).strftime('%d')}" %></th>
          <% end %>
          <th>Week Total</th>
        </tr>
        <tr>
        <% 0.upto(6) do |j| %>
          <td height="90px">
            <% @current_month_sessions.each do |session| %>
              <% if session.start_time.month == (@weeks_start[i]+j.days).month && session.start_time.day == (@weeks_start[i]+j.days).day %>
                <%= link_to "#{session.class_session.name}", class_session_path(session.class_session_id) %><small>: <%= number_with_precision((session.end_time-session.start_time)/60, precision: 0) %> mins</small><br>
              <% end %>
            <% end %>
          </td>
        <% end %>
        <td>
          1 hr 25 min
        </td>
      </tr>
      <% end %>
    </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12" align="right">
      <B>Month Total:</B> 3 hr 25 min
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <ul>
        <% @current_month_sessions.each do |s| %>
          <li><%= link_to "#{s.class_session.name}", class_session_path(id: s.class_session_id) %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% else %>
  <div class="row">
    <div class="col-md-12" align="center">
      There are no statics for student <B><%= "#{@student.first_name} #{ @student.last_name }" %></B> with ID Number <B><%= "#{ @student.id_number }" %></B>.<BR>
      This student has never signed in.
    </div>
  </div>
<% end %>