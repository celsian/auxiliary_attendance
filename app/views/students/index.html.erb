<div class="row">
  <div class="col-md-6">
    <h3><B>Search for Students:</B></h3>
  </div>
</div>
<div class="row">
  <div class="col-sm-4">
    <div class="form-inline">
      <%= form_tag(students_path, :method => :get, :class => "form-search") do %>
        <%= text_field_tag :q, "", class: "form-control", placeholder: "Name or ID Number", autofocus: true %>
        <%= hidden_field_tag :enabled, params[:enabled] %>
        <%= submit_tag "Search", class: 'btn btn-sm btn-primary' %>
      <% end %>
    </div>
  </div>
  <div class="col-sm-1">
    <% if params[:enabled] == "0" %>
      <%= link_to "Show Enabled Students", students_path(params.merge(enabled: "1")), class: 'btn btn-sm btn-success' %>
    <% else %>
      <%= link_to "Show Disabled Students", students_path(params.merge(enabled: "0")), class: 'btn btn-sm btn-danger' %>
    <% end %>
  </div>
</div>
<br>
<div class="row">
  <div class="col-md-6">
    <div class="panel panel-default">
      <!-- Default panel contents -->
      <div class="panel-heading"><h3 class="panel-title"><B><CENTER>Students</CENTER></B></h3></div>

      <!-- Table -->
      <table class="table table-striped">
        <thead>
          <tr>
            <th>First Name</th><th>Last Name</th><th>ID Number</th><th></th>
          </tr>
        </thead>
    <% if @students.length > 0 %>
      <% @students.each do |student| %>
        <tr>
          <td>
            <%= student.first_name %>
          </td>
          <td>
            <%= student.last_name %>
          </td>
          <td>
            <%= student.id_number %>
          </td>
          <td>
            <%= link_to "Edit", edit_student_path(student), class: "btn-sm btn-primary" %>
          </td>
        </tr>
      <% end %>
    <% else %>
      <tr>
        <td>
        Sorry, no records match your query.
        </td>
        <td>
        
        </td>
        <td>
        
        </td>
        <td>
        
        </td>
      </tr>
    <% end %>
      </table>
    </div>
<!-- PAGINATION STARTS HERE -->
    <nav>
      <ul class="pagination">    
          <% if params[:s].to_i == 0 %>
            <li class="disabled"><a href="">«</a></li>
          <% else %>
            <li><%= link_to "«", students_path(params.merge(s: params[:s].to_i-1)) %></li>
          <% end %>
        <% if @student_pages %>
          <% 1.upto(@student_pages) do |i| %>
            <% if params[:s].to_i == i-1 %>
              <li class="active">
            <% else %>
              <li>
            <% end %>
              <%= link_to i, students_path(params.merge(s: i-1)) %>
          <% end %>
              </li>
        <% end %>
        <li>
            <% if params[:s].to_i == @student_pages-1 || @student_pages == 0 %>
              <li class="disabled"><a href="">»</a></li>
            <% else %>
              <%= link_to "»", students_path(params.merge(s: params[:s].to_i+1)) %>
            <% end %>
        </li>
      </ul>
    </nav>
<!-- PAGINATION ENDs HERE -->
  </div>
</div>